<%- include("partials/header") -%>
<div class="wrapper wrapper--w790">
        <div class="card card-5">
            <div class="card-heading">
                <h1 class="title">DREAM HOME </h1>
                <h2 class="title">client registration form</h2>
            </div>
            <div class="card-body">
                <form method="POST">
                    <div>
                        <div class="form-row m-b-55">
                            <div class="name">client id</div>
                            <div class="value">
                                <div class="row row-space">
                                    <div class="col-2">
                                        <div class="input-group-desc">
                                            <input class="input--style-5" type="text" name="client_id">

                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-row m-b-55">
                        <div class="name">Name</div>
                        <div class="value">
                            <div class="row row-space">
                                <div class="col-2">
                                    <div class="input-group-desc">
                                        <input class="input--style-5" type="text" name="fname">

                                    </div>
                                </div>
                                <div class="col-2">
                                    <div class="input-group-desc">
                                        <input class="input--style-5" type="text" name="lname">

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr>

                    <div class="form-row m-b-55" id="position">
                        <div class="name">telephone Number</div>
                        <div class="value">
                            <div class="row row-space">
                                <div class="col-2">
                                    <div class="input-group-desc">
                                        <input class="input--style-5" type="text" name="tel_no">

                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>

                    <div class="form-row m-b-55" id="position">
                        <div class="name">type</div>
                        <div class="value">
                            <div class="row row-space">
                                <div class="col-2">
                                    <div class="input-group-desc">
                                        <input class="input--style-5" type="text" name="type">

                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>


                    <div class="form-row m-b-55">
                        <div class="name"> max rent</div>
                        <div class="value">
                            <div class="row row-space">
                                <div class="col-2">
                                    <div class="input-group-desc">
                                        <input class="input--style-5" type="number" name="max_rent">

                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>





                    <hr>





                    <div class="form-row" id="position">
                        <div class="name">branch id</div>
                        <div class="value">
                            <div class="input-group">
                                <input class="input--style-5" type="text" name="position">

                            </div>
                        </div>
                    </div>
                    



                    <div class="form-row m-b-55">
                        <div class="name">registered by</div>
                        <div class="value">
                            <div class="row row-space">
                                <div class="col-2">
                                    <div class="input-group-desc">
                                        <input class="input--style-5" type="text" name="reg_by">

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="form-row m-b-55">
                        <div class="name">date registered</div>
                        <div class="value">
                            <div class="row row-space">
                                <div class="col-2">
                                    <div class="input-group-desc">
                                        <input class="input--style-5" type="date" name="reg_date">

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>



                    <div>
                        <button class="btn btn--radius-2 btn--red" type="submit">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
<%- include("partials/footer") -%>